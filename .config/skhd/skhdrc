# Change windows
shift + ctrl - l : yabai -m window --focus east
shift + ctrl - k : yabai -m window --focus north
shift + ctrl - j : yabai -m window --focus south
shift + ctrl - h : yabai -m window --focus west

# Swap Windows
shift + alt - l : yabai -m window --swap east
shift + alt - k : yabai -m window --swap north
shift + alt - j : yabai -m window --swap south
shift + alt - h : yabai -m window --swap west

# Maximize app
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# Balance apps
shift + ctrl - e : yabai -m space --balance

# Open Alacritty
ctrl - return : open -na /Applications/Alacritty.app 
# Open Arc
ctrl + shift - return : open -na /Applications/Arc.app

# Open VSCode 
ctrl + fn - v : open -na /Applications/Visual\ Studio\ Code.app

# Open Discord
ctrl + fn - d : open -na /Applications/Discord.app
